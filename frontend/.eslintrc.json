{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:solid/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "solid"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.spec.ts",
        "tests/**/*.spec.tsx"
      ],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "CallExpression[callee.property.name='waitForTimeout']",
            "message": "Avoid waitForTimeout in tests; wait on UI or network state instead."
          },
          {
            "selector": "CallExpression[callee.name='setTimeout']",
            "message": "Avoid setTimeout sleeps in tests; use state-based waits instead."
          }
        ]
      }
    }
  ]
}
